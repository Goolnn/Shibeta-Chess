<interface>
    <object class="GtkEventBox" id="background">
        <child>
            <object class="GtkGrid">
                <child>
                    <object class="GtkGrid">
                        <property name="name">title-bar</property>

                        <property name="height-request">30</property>
                        <property name="hexpand">True</property>

                        <child>
                            <object class="GtkLabel" id="subtitle"/>

                            <packing>
                                <property name="left-attach">0</property>
                                <property name="top-attach">0</property>

                                <property name="width">5</property>

                            </packing>

                        </child>

                        <child>
                            <object class="GtkEventBox" id="title-box">
                                <child>
                                    <object class="GtkLabel">
                                        <property name="margin-start">8</property>
                                        <property name="margin-end">8</property>

                                        <attributes>
                                            <attribute name="font-desc" value="黑体 10"/>
                                            <attribute name="foreground" value="#ffffff"/>

                                        </attributes>

                                    </object>

                                </child>

                            </object>

                            <packing>
                                <property name="left-attach">0</property>
                                <property name="top-attach">0</property>

                            </packing>

                        </child>

                        <child>
                            <object class="GtkEventBox" id="title-bar">
                                <property name="hexpand">True</property>

                            </object>

                            <packing>
                                <property name="left-attach">1</property>
                                <property name="top-attach">0</property>

                            </packing>
                        </child>

                        <child>
                            <object class="GtkEventBox" id="left-button">
                                <property name="name">left-button</property>
                                
                                <child>
                                    <object class="GtkImage">
                                        <property name="width-request">30</property>
                                        <property name="height-request">30</property>

                                        <property name="pixbuf">../res/icon/minimize.svg</property>

                                    </object>

                                </child>
                            
                            </object>

                            <packing>
                                <property name="left-attach">2</property>
                                <property name="top-attach">0</property>

                            </packing>

                        </child>

                        <child>
                            <object class="GtkEventBox" id="middle-button">
                                <child>
                                    <object class="GtkImage">
                                        <property name="width-request">30</property>
                                        <property name="height-request">30</property>

                                        <property name="pixbuf">../res/icon/maximize.svg</property>

                                    </object>
                                
                                </child>
                            
                            </object>

                            <packing>
                                <property name="left-attach">3</property>
                                <property name="top-attach">0</property>

                            </packing>

                        </child>

                        <child>
                            <object class="GtkEventBox" id="right-button">
                                <child>
                                    <object class="GtkImage">
                                        <property name="width-request">30</property>
                                        <property name="height-request">30</property>

                                        <property name="pixbuf">../res/icon/close.svg</property>

                                    </object>

                                </child>

                            </object>

                            <packing>
                                <property name="left-attach">4</property>
                                <property name="top-attach">0</property>

                            </packing>

                        </child>

                    </object>

                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">0</property>

                    </packing>

                </child>

                <child>
                    <object class="GtkGrid" id="root">
                        <property name="name">root</property>

                        <property name="hexpand">True</property>
                        <property name="vexpand">True</property>

                    </object>

                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">1</property>

                    </packing>

                </child>

                <child>
                    <object class="GtkBox">
                        <property name="name">tool</property>

                        <property name="hexpand">True</property>
                        <property name="height-request">30</property>

                    </object>

                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">2</property>

                    </packing>

                </child>

            </object>

        </child>

    </object>

</interface>
